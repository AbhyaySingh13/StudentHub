@model IEnumerable<Student.Core.Models.Device>

@{
    ViewBag.Title = "Manage Devices";
}

<h2>Manage Devices</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Memory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OperatingSystem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessorType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HardDrive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GraphicsCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VirusProtect)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearsOfWarranty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img class="img-thumbnail" style="height:50px" src="~/Content/DeviceImages/@item.Image" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Memory)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OperatingSystem)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProcessorType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HardDrive)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GraphicsCard)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.VirusProtect)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.YearsOfWarranty)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
