@model Student.Core.ViewModels.JobViewModel

@{
    ViewBag.Title = "View Jobs Near Me";
}
<h2>View Available Jobs</h2>


<div class="col-md-10">

    @foreach (var item in Model.Jobs)
    {

        <div class="col-md-2" style="height:400px;width:250px;padding:10px;margin:10px;border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:220px;width:200px" src="~/Content/JobImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.BusinessName, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.JobPosition</p>
            </div>
            <div class="col-md-12">
                <h4>@String.Format("{0:c}", item.SalaryOffered)</h4>
            </div>
            <div class="col-md-12">

            </div>
            <div class="col-md-12">

                <a href="#" class="btn btn-primary" style="padding:8px;">View Now</a>

            </div>
        </div>
    }
</div>
<div class="col-md-12 clearfix" />